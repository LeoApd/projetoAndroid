<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


     <TextView
         android:layout_width="match_parent"
         android:layout_height="246dp"
         android:text="POKEMON CARD"
         android:background="@color/black"
         android:textColor="@color/white"
         android:textSize="50dp"
         android:gravity="center"
         android:layout_marginBottom="100dp"/>

    <Button
        android:id="@+id/cadastrar_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroud_button"
        android:textColor="@color/white"
        android:text="CADASTRAR CARD"
        android:onClick="telaCadastro"/>

    <Button
        android:id="@+id/listar_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:textColor="@color/white"
        android:text="LISTAR CARD"
        android:onClick="listagem"/>

</LinearLayout>